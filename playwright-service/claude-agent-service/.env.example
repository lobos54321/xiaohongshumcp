# Claude API 配置
ANTHROPIC_API_KEY=your_api_key_here

# Google Gemini API 配置 (用于图片生成)
GEMINI_API_KEY=your_gemini_api_key_here

# Unsplash API 配置 (免费图片备用)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# MCP Router 配置
MCP_ROUTER_COMMAND=node
MCP_ROUTER_ARGS=/path/to/mcp-router/dist/index.js

# HTTP Server 配置
PORT=4000

# Claude 模型配置
CLAUDE_MODEL=claude-3-5-sonnet-20241022
MAX_TOKENS=4096

# MCP Router URL
MCP_ROUTER_URL=http://localhost:3000
